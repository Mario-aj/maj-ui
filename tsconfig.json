{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "./src/**/*.stories.mdx",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.jsx",
    "./src/**/*.stories.ts",
    "./src/**/*.stories.js"
  ]
}
